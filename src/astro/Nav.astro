---
import blem from "blem";
import Logo from "@astro/Logo.astro";
const bem = blem("Nav");
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<nav class={bem("")}>
  <Logo animate size="small" />
  <strong class={bem("title", [title])}>{title}</strong>
</nav>

<style>
  .Nav {
    padding-top: 0.5rem;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    align-items: center;
    margin-bottom: 1rem;
  }
  .Nav__title {
    font-family: "Antonio", sans-serif;
    margin: 0;
    padding: 0;
    text-transform: uppercase;
    font-size: 1.75rem;
    font-weight: 400;
    line-height: 1.75rem;
  }
</style>
